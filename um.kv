<Bullseye>:
    ScrollView:
        do_scroll_y: True
        do_scroll_x: False

        GridLayout:
            orientation: "lr-tb"
            size_hint_y: None
            size_hint_x: 1
            height: 50
            row_default_height: 60
            cols:2

            Label:
                text: 'Arrogant But Effective:\n Csata után: Bullseye a harc győztese. Mozgasd Bullseye-t maximum 2 mezőt.'
                size_hint: None, None
                height: 60

            Image:
                source: 'lila22.png'
                allow_stretch: True
                keep_ratio: True
                pos_hint: {"x":0.9, "top":0.9}
                size_hint: None, None
                height: 60

            Label:
                text: 'Feint:\n Azonnal: Érvénytelenítsd az ellenfeled kártyájának összes hatását!'
                size_hint: 1, None
                height: 60  
            
            Image:
                source: 'lila22.png'
                allow_stretch: True
                keep_ratio: True
                size_hint: 1, None
                height: 60

            Label:
                text: 'For My Next Trick:\ Csata után: Mozgasd Bullseyet egy mező távolságra. Húzz egy kártyát.\n Kapsz egy további akciót'
                size_hint: 1, None
                height: 60

            Image:
                source: 'piros22.png'
                allow_stretch: True
                keep_ratio: True
                size_hint: 1, None
                height: 60
            
            Label:
                text: "I'm Better And I'll Prove It:\n Csata során: Ha már nyertél egy csatát ebben a körben, ennek a kártyának az értéke 6."
                size_hint: 1, None
                height: 60  
            
            Image:
                source: 'lila22.png'
                allow_stretch: True
                keep_ratio: True
                size_hint: 1, None
                height: 60

            Label:
                text: 'I Never Miss:\n Csata során: Felturbózhatod a támadást. Ha nem boostolod fel a támadást, húzz egy kártyát!'
                size_hint: 1, None
                height: 60  
            
            Image:
                source: 'piros23.png'
                allow_stretch: True
                keep_ratio: True
                size_hint: 1, None
                height: 60

            Label:
                text: 'I Planned To Be Here:\n Ha a harcosod ezen a mezőn kezdte a kört, ennek a kártyának az értéke 5!'
                size_hint: 1, None
                height: 60

            Image:
                source: 'piros32.png'
                allow_stretch: True
                keep_ratio: True
                size_hint: 1, None
                height: 60
            
            Label:
                text: 'Master Strategist:\n Csata után: Mozgasd Bullseye-t 4 mező távolságra. Olyan mezőkön is áthaladhatsz, ahol az ellenfél harcosai tartózkodnak!'
                size_hint: 1, None
                height: 60  
            
            Image:
                source: 'lila33.png'
                allow_stretch: True
                keep_ratio: True
                size_hint: 1, None
                height: 60                                       

            Label:
                text: 'Ricochet:\n Csata után: Ha az ellenfél harcosa nem halt meg, ossz ki 1 sebzést a célpont harcossal ugyan azon zónában tartózkodó harcosnak!'
                size_hint: 1, None
                height: 60

            Image:
                source: 'lila23.png'
                allow_stretch: True
                keep_ratio: True
                size_hint: 1, None
                height: 60
            
            Label:
                text: 'Right Between The Eyes:\n Ha már nyertél egy csatát ebben a körben, az ellenfelednek el kell dobni 1 kártyát!'
                size_hint: 1, None
                height: 60  
            
            Image:
                source: 'sarga3.png'
                allow_stretch: True
                keep_ratio: True
                size_hint: 1, None
                height: 60

            Label:
                text: 'Study The Target:\n Húzz 2 kártyát. Ha már nyertél egy csatát ebben a körben, húzz 1 kártyát és kapsz 1 további akciót.'
                size_hint: 1, None
                height: 60

            Image:
                source: 'lila22.png'
                allow_stretch: True
                keep_ratio: True
                size_hint: 1, None
                height: 60
            
            Label:
                text: 'Tactical Retreat:\n Csata után: Helyezt Bullseye-t bármely mezőre, a jelenlegi zónádón kívül!'
                size_hint: 1, None
                height: 60  
            
            Image:
                source: 'kek23.png'
                allow_stretch: True
                keep_ratio: True
                size_hint: 1, None
                height: 60

            Label:
                text: "World's Greatest Assassin: \n Azonnal: Ha már nyertél egy csatát ebben a körben, hagyd figyelmen kívül az ellenfeled kártyájának értékét."
                size_hint: 1, None
                height: 60

            Image:
                source: 'piros34.png'
                allow_stretch: True
                keep_ratio: True
                size_hint: 1, None
                height: 60
                
<Daredevil>:
    ScrollView:
        do_scroll_y: True
        do_scroll_x: False

        GridLayout:
            orientation: "lr-tb"
            size_hint_y: None
            height: 50
            row_default_height: 60
            cols:2

            Label:
